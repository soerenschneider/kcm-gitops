{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":rebaseStalePrs"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "flux": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["kubernetes"],
      "updateTypes": ["major", "minor", "patch"]
    },
    {
      "matchDatasources": ["docker"],
      "updateTypes": ["minor", "patch"]
    }
  ]
}
